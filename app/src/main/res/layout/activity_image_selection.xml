<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/imageViewDetailsScreenHeader"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_245sdp"
                android:layout_alignParentTop="true"
                android:layout_marginTop="@dimen/_minus20sdp"
                android:background="@drawable/heaaderrectangleloginscreen" />

            <TextView
                android:id="@+id/textViewStyleGreet2"
                android:layout_width="@dimen/_115sdp"
                android:layout_height="@dimen/_30sdp"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:layout_marginStart="@dimen/_23sdp"
                android:layout_marginTop="@dimen/_35sdp"
                android:fontFamily="@font/arial"
                android:text="@string/hi_rohan"
                android:textColor="#000"
                android:textSize="@dimen/_27ssp" />

            <TextView
                android:id="@+id/textViewDetailsScreenText2"
                android:layout_width="@dimen/_283sdp"
                android:layout_height="@dimen/_27sdp"
                android:layout_below="@+id/textViewStyleGreet2"
                android:layout_alignParentStart="true"
                android:layout_marginStart="@dimen/_23sdp"
                android:layout_marginTop="@dimen/_24sdp"
                android:fontFamily="@font/arial"
                android:lineSpacingExtra="@dimen/_33sdp"
                android:text="Final: Image Selection"
                android:textColor="#000"
                android:textSize="@dimen/_20sdp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/textViewDetailsScreenText3"
                android:layout_width="@dimen/_288sdp"
                android:layout_height="@dimen/_55sdp"
                android:layout_below="@+id/textViewDetailsScreenText2"
                android:layout_marginStart="@dimen/_23sdp"
                android:layout_marginTop="@dimen/_12sdp"
                android:fontFamily="@font/arial"
                android:lineSpacingExtra="@dimen/_3sdp"
                android:text="Your body structure helps us to understand how design and its colour will look great on you considering your personality."
                android:textColor="#000"
                android:textSize="@dimen/_13ssp" />

            <ProgressBar
                android:id="@+id/progressBarDetailsScreen"
                style="?android:attr/progressBarStyleHorizontal"
                android:layout_width="@dimen/_327sdp"
                android:layout_height="@dimen/_10sdp"
                android:layout_below="@+id/imageViewDetailsScreenHeader"
                android:layout_marginStart="@dimen/_20sdp"
                android:layout_marginTop="@dimen/_34sdp"
                android:layout_marginEnd="@dimen/_20sdp"
                android:background="@drawable/progressfinal"
                android:max="100"
                android:progress="10"
                android:progressTint="@color/progess"
                android:scaleY="2" />

            <androidx.cardview.widget.CardView
                android:layout_width="@dimen/_300sdp"
                android:layout_height="@dimen/_384sdp"
                android:layout_marginStart="38dp"
                android:layout_marginTop="@dimen/_300sdp"
                android:layout_marginEnd="38dp">

                <ImageView
                    android:id="@+id/userIMG"
                    android:layout_width="@dimen/_260sdp"
                    android:layout_height="@dimen/_374sdp"
                    android:background="@drawable/imagelast"
                    android:scaleType="centerCrop" />

            </androidx.cardview.widget.CardView>
        </RelativeLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <ImageButton
                    android:id="@+id/imagebuttonimageselectionHate_1"
                    android:layout_width="@dimen/_45sdp"
                    android:layout_height="@dimen/_45sdp"
                    android:layout_marginLeft="80dp"
                    android:background="@drawable/cross" />

                <ImageButton
                    android:id="@+id/imagebuttonimageselectionNotSure_1"
                    android:layout_width="@dimen/_45sdp"
                    android:layout_height="@dimen/_45sdp"
                    android:layout_marginLeft="@dimen/_30sdp"
                    android:background="@drawable/help" />

                <ImageButton
                    android:id="@+id/imagebuttonimageselectionLove_1"
                    android:layout_width="@dimen/_45sdp"
                    android:layout_height="@dimen/_45sdp"
                    android:layout_gravity="center"
                    android:layout_marginLeft="@dimen/_30sdp"
                    android:background="@drawable/check" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/textviewimageselectionHate_1"
                    android:layout_width="@dimen/_29sdp"
                    android:layout_height="@dimen/_11sdp"
                    android:layout_marginLeft="90dp"
                    android:fontFamily="@font/arial"
                    android:text="Hate it"
                    android:textColor="#000"
                    android:textSize="@dimen/_10sdp" />

                <TextView
                    android:id="@+id/textviewimageselectionNotSure_1"
                    android:layout_width="wrap_content"
                    android:layout_height="14dp"
                    android:layout_marginLeft="@dimen/_45sdp"
                    android:fontFamily="@font/arial"
                    android:text="Not sure"
                    android:textColor="#000"
                    android:textSize="@dimen/_10sdp" />

                <TextView
                    android:id="@+id/textviewimageselectionLove_1"
                    android:layout_width="wrap_content"
                    android:layout_height="14dp"
                    android:layout_marginLeft="@dimen/_40sdp"
                    android:fontFamily="@font/arial"
                    android:inputType="text"
                    android:labelFor="@+id/imagebuttonimageselectionLove_1"
                    android:text="Loved It"
                    android:textAlignment="center"
                    android:textColor="#000"
                    android:textSize="@dimen/_10sdp" />

            </LinearLayout>

            <ImageButton
                android:id="@+id/imageButtonimageSelectionScreenForward_1"
                android:layout_width="@dimen/_138sdp"
                android:layout_height="@dimen/_46sdp"
                android:layout_gravity="center"
                android:layout_marginStart="@dimen/_100sdp"
                android:layout_marginTop="@dimen/_10sdp"
                android:layout_marginEnd="@dimen/_100sdp"
                android:layout_marginBottom="@dimen/_20sdp"
                android:background="@drawable/finishbutton" />

        </LinearLayout>

    </LinearLayout>
</ScrollView>