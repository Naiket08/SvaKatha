<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/backk"
    tools:context=".DetailsScreen">

    <ImageView
        android:id="@+id/imageViewDetailsScreenHeader"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_147sdp"
        android:background="@drawable/headerback"
        android:layout_alignParentTop="true"
        android:layout_marginTop="@dimen/_minus20sdp"/>

    <TextView

        android:id="@+id/textViewDetailsScreenGreet"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_35sdp"
        android:fontFamily="@font/arial"
        android:text=""
        android:textColor="#FFFFFF"
        android:textSize="@dimen/_20ssp"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="@dimen/_20sdp"
        android:layout_marginStart="@dimen/_23sdp"/>



    <TextView
        android:id="@+id/textViewDetailsScreenText3"
        android:layout_width="@dimen/_300sdp"
        android:layout_height="@dimen/_70sdp"
        android:text="Let's start by knowing more  about you\n
for better design and style suggestions..."
        android:fontFamily="@font/arial"
        android:textColor="#FFFFFF"
        android:textSize="@dimen/_14ssp"
        android:lineSpacingExtra="@dimen/_2sdp"
        android:layout_below="@+id/textViewDetailsScreenGreet"
        android:layout_marginStart="@dimen/_23sdp"
        android:layout_marginTop="@dimen/_12sdp"/>



    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/imageViewDetailsScreenHeader">

        <RelativeLayout
            android:layout_width="@dimen/_280sdp"
            android:layout_height="@dimen/_340sdp"
            android:paddingBottom="@dimen/_10sdp"
            android:layout_marginTop="@dimen/_30sdp"
            android:layout_gravity="center"
            android:background="@drawable/backwhite">

            <ProgressBar
                android:id="@+id/progressBarDetailsScreen"
                style="?android:attr/progressBarStyleHorizontal"
                android:layout_width="@dimen/_327sdp"
                android:layout_height="@dimen/_10sdp"
                android:max="100"
                android:progressTint="@color/progess"
                android:background="@drawable/progress"
                android:paddingTop="@dimen/_1sdp"
                android:paddingRight="@dimen/_1sdp"
                android:paddingBottom="@dimen/_1sdp"
                android:paddingLeft="@dimen/_2sdp"
                android:scaleY="1.2"
                android:progressDrawable="@drawable/rounded_corners_progress_bar"
                android:layout_marginTop="@dimen/_50sdp"
                android:layout_marginStart="@dimen/_20sdp"
                android:layout_marginEnd="@dimen/_20sdp"/>


            <TextView
                android:id="@+id/textViewDetailsScreenOccupation"
                android:layout_width="@dimen/_300sdp"
                android:layout_height="match_parent"
                android:layout_marginStart="@dimen/_10sdp"
                android:layout_marginTop="@dimen/_50sdp"
                android:fontFamily="@font/montserratmedium"
                android:text="What is your occupation?"
                android:layout_below="@id/progressBarDetailsScreen"
                android:textColor="#000"
                android:textSize="@dimen/_20ssp" />


            <androidx.appcompat.widget.AppCompatSpinner
                android:id="@+id/spnr_occupation_detailsscreen"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="16dp"
                android:paddingHorizontal="16dp"
                android:background="@drawable/inputs"
                android:layout_marginStart="@dimen/_20sdp"
                android:layout_marginEnd="@dimen/_48sdp"
                android:layout_below="@+id/textViewDetailsScreenOccupation"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="@dimen/_40sdp"/>

            <ImageButton
                android:id="@+id/imageButtonDetailsScreenForward"
                android:layout_width="@dimen/_26sdp"
                android:layout_height="@dimen/_26sdp"
                android:background="@drawable/ic_arrow_forward_black_24dp"
                android:layout_below="@+id/spnr_occupation_detailsscreen"
                android:layout_alignParentEnd="true"
                android:layout_marginEnd="@dimen/_25sdp"
                android:layout_marginTop="@dimen/_55sdp"
                android:layout_marginBottom="@dimen/_20sdp"/>
        </RelativeLayout>
    </ScrollView>


</RelativeLayout>