<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/backk"
    tools:context=".DetailsScreen">

    <ImageView
        android:id="@+id/imageViewPriceScreenHeader1"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_147sdp"
        android:background="@drawable/headerback"
        android:layout_alignParentTop="true"
        android:layout_marginTop="@dimen/_minus20sdp"/>

    <TextView

        android:id="@+id/textViewPriceScreenGreet1"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_35sdp"
        android:fontFamily="@font/arial"
        android:text=""
        android:textColor="#FFFFFF"
        android:textSize="@dimen/_20ssp"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="@dimen/_20sdp"
        android:layout_marginStart="@dimen/_23sdp"/>



    <TextView
        android:id="@+id/textViewPriceScreenText3_1"
        android:layout_width="@dimen/_300sdp"
        android:layout_height="@dimen/_70sdp"
        android:text="Let's start by knowing more  about you\n
for better design and style suggestions..."
        android:fontFamily="@font/arial"
        android:textColor="#FFFFFF"
        android:textSize="@dimen/_14ssp"
        android:lineSpacingExtra="@dimen/_2sdp"
        android:layout_below="@+id/textViewPriceScreenGreet1"
        android:layout_marginStart="@dimen/_23sdp"
        android:layout_marginTop="@dimen/_12sdp"/>



    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/imageViewPriceScreenHeader1">

        <RelativeLayout
            android:layout_width="@dimen/_280sdp"
            android:layout_height="@dimen/_340sdp"
            android:paddingBottom="@dimen/_10sdp"
            android:layout_marginTop="@dimen/_30sdp"
            android:layout_gravity="center"
            android:background="@drawable/backwhite">

            <ProgressBar
                android:id="@+id/progressBarPriceScreen1"
                style="?android:attr/progressBarStyleHorizontal"
                android:layout_width="@dimen/_327sdp"
                android:layout_height="@dimen/_10sdp"
                android:max="100"
                android:progressTint="@color/progess"
                android:background="@drawable/progress"
                android:paddingTop="@dimen/_1sdp"
                android:paddingRight="@dimen/_1sdp"
                android:paddingBottom="@dimen/_1sdp"
                android:paddingLeft="@dimen/_2sdp"
                android:scaleY="1.2"
                android:progressDrawable="@drawable/rounded_corners_progress_bar"
                android:layout_marginTop="@dimen/_50sdp"
                android:layout_marginStart="@dimen/_20sdp"
                android:layout_marginEnd="@dimen/_20sdp"/>


            <TextView
                android:id="@+id/textViewPriceScreenClothing1"
                android:layout_width="@dimen/_300sdp"
                android:layout_height="match_parent"
                android:layout_marginStart="@dimen/_20sdp"
                android:layout_marginTop="@dimen/_50sdp"
                android:fontFamily="@font/montserratmedium"
                android:text="How much do you spend on clothing yearly?"
                android:layout_below="@id/progressBarPriceScreen1"
                android:textColor="#000"
                android:textSize="@dimen/_20ssp" />


            <com.crystal.crystalrangeseekbar.widgets.CrystalRangeSeekbar
                android:id="@+id/rangeseekbar"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/textViewPriceScreenClothing1"
                android:layout_marginLeft="@dimen/_20sdp"
                android:layout_marginTop="@dimen/_20sdp"
                android:layout_marginRight="@dimen/_20sdp"
                app:bar_color="#BCE0FD"
                app:bar_highlight_color="#142E54"
                app:corner_radius="4"
                app:data_type="_integer"
                app:gap="100"
                app:left_thumb_color="@color/themecolor"
                app:left_thumb_color_pressed="@color/themecolor"
                app:left_thumb_image="@drawable/thumb"
                app:max_value="200000"
                app:min_value="2000"
                app:right_thumb_color="@color/themecolor"
                app:right_thumb_color_pressed="@color/themecolor"
                app:right_thumb_image="@drawable/thumb" />


            <TextView
                android:id="@+id/textViewPriceOne"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/rangeseekbar"
                android:layout_alignParentStart="true"
                android:layout_marginStart="@dimen/_10sdp"
                android:layout_marginTop="@dimen/_30sdp"
                android:fontFamily="@font/arial"
                android:textColor="#462828"
                android:textSize="@dimen/_14sdp" />

            <TextView
                android:id="@+id/textViewPriceTwo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/rangeseekbar"
                android:layout_alignParentEnd="true"
                android:layout_marginTop="@dimen/_30sdp"
                android:layout_marginEnd="@dimen/_10sdp"
                android:fontFamily="@font/arial"
                android:text=""
                android:textColor="#462828"
                android:textSize="@dimen/_14sdp" />

            <ImageButton
                android:id="@+id/imageButtonPriceScreenForward_1"
                android:layout_width="@dimen/_26sdp"
                android:layout_height="@dimen/_26sdp"
                android:background="@drawable/ic_arrow_forward_black_24dp"
                android:layout_below="@+id/textViewPriceTwo"
                android:layout_alignParentEnd="true"
                android:layout_marginEnd="@dimen/_25sdp"
                android:layout_marginTop="@dimen/_45sdp"
                android:layout_marginBottom="@dimen/_20sdp"/>
        </RelativeLayout>
    </ScrollView>


</RelativeLayout>