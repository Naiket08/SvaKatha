<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:theme="@style/Theme.AppCompat.NoActionBar"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF"
    tools:context=".DetailsScreen">

    <ImageView
        android:id="@+id/imageViewPriceScreenHeader1"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_245sdp"
        android:background="@drawable/heaaderrectangleloginscreen"
        android:layout_alignParentTop="true"
        android:layout_marginTop="@dimen/_minus20sdp"/>

    <TextView
        android:id="@+id/textViewPriceScreenGreet1"
        android:layout_width="@dimen/_115sdp"
        android:layout_height="@dimen/_30sdp"
        android:fontFamily="@font/arial"
        android:text="@string/hi_rohan"
        android:textColor="#000"
        android:textSize="@dimen/_27ssp"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="@dimen/_35sdp"
        android:layout_marginStart="@dimen/_23sdp"/>

    <TextView
        android:id="@+id/textViewPriceScreenText2_1"
        android:layout_width="@dimen/_210sdp"
        android:layout_height="@dimen/_55sdp"
        android:text="Let's start by knowing\nmore about you.."
        android:textColor="#000"
        android:lineSpacingExtra="@dimen/_7sdp"
        android:textSize="@dimen/_20ssp"
        android:fontFamily="@font/arial"
        android:layout_below="@+id/textViewPriceScreenGreet1"
        android:layout_alignParentStart="true"
        android:layout_marginTop="@dimen/_24sdp"
        android:layout_marginStart="@dimen/_23sdp"/>

    <TextView
        android:id="@+id/textViewPriceScreenText3_1"
        android:layout_width="@dimen/_242sdp"
        android:layout_height="@dimen/_49sdp"
        android:text="This information helps us to know about your\npersonality type, so that we can provide you\nbetter design and style suggestions"
        android:fontFamily="@font/arial"
        android:textColor="#000"
        android:textSize="@dimen/_12ssp"
        android:lineSpacingExtra="@dimen/_2sdp"
        android:layout_below="@+id/textViewPriceScreenText2_1"
        android:layout_marginStart="@dimen/_23sdp"
        android:layout_marginTop="@dimen/_12sdp"/>

    <ProgressBar
        android:id="@+id/progressBarPriceScreen1"
        style="?android:attr/progressBarStyleHorizontal"
        android:layout_width="@dimen/_270sdp"
        android:layout_height="@dimen/_8sdp"
        android:max="100"
        android:progressTint="@color/progess"
        android:layout_below="@+id/imageViewPriceScreenHeader1"
        android:background="@drawable/progressspend"
        android:layout_marginTop="@dimen/_34sdp"
        android:layout_marginStart="@dimen/_20sdp"
        android:layout_marginEnd="@dimen/_20sdp"/>

    <TextView
        android:id="@+id/textViewPriceScreenClothing1"
        android:layout_width="279dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/progressBarPriceScreen1"
        android:layout_marginStart="@dimen/_20sdp"
        android:layout_marginTop="77dp"
        android:fontFamily="@font/arial"

        android:text="@string/price"
        android:textColor="#000"
        android:textSize="@dimen/_17ssp" />

    <com.crystal.crystalrangeseekbar.widgets.CrystalRangeSeekbar
        android:id="@+id/rangeseekbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:min_value="0"
        app:max_value="10000"
        app:corner_radius="2"
        app:gap="4"
        android:layout_below="@id/textViewPriceScreenClothing1"
        android:layout_marginTop="@dimen/_20sdp"
        android:layout_marginRight="@dimen/_20sdp"
        android:layout_marginLeft="@dimen/_20sdp"
        app:bar_color="@color/appgraydark"
        app:bar_highlight_color="#2699FB"
        app:left_thumb_image="@drawable/thumb"
        app:right_thumb_image="@drawable/thumb"
        app:left_thumb_color="@color/themecolor"
        app:right_thumb_color="@color/themecolor"
        app:left_thumb_color_pressed="@color/themecolor"
        app:right_thumb_color_pressed="@color/themecolor"
        app:data_type="_integer"/>

    <ImageButton
        android:id="@+id/imageButtonPriceScreenForward_1"
        android:layout_width="24dp"
        android:layout_height="27dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginEnd="42dp"
        android:layout_marginBottom="45dp"
        android:background="#FFFFFF"
        android:src="@drawable/ic_arrow_forward_black_24dp" />

    <TextView
        android:id="@+id/textViewPriceOne"
        android:layout_width="@dimen/_40sdp"
        android:layout_height="@dimen/_16sdp"
        android:layout_below="@id/rangeseekbar"
        android:layout_marginTop="@dimen/_30sdp"
        android:layout_marginLeft="@dimen/_30sdp"
        android:fontFamily="@font/arial"
        android:textSize="@dimen/_14sdp"
        android:textColor="#2699FB"/>

    <TextView
        android:id="@+id/textViewPriceTwo"
        android:layout_width="@dimen/_40sdp"
        android:layout_height="@dimen/_16sdp"
        android:textColor="#2699FB"
        android:layout_below="@id/rangeseekbar"
        android:fontFamily="@font/arial"
        android:textSize="@dimen/_14sdp"
        android:layout_marginTop="@dimen/_30sdp"
        android:layout_marginLeft="@dimen/_250sdp"/>


</RelativeLayout>

