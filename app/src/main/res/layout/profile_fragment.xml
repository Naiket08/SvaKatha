<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF"
    tools:context=".DetailsScreen">

    <ScrollView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/imageViewBodyShapeScreen_1"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_265sdp"
                android:background="@drawable/backkk"
                android:layout_alignParentTop="true"
                android:layout_marginTop="@dimen/_minus20sdp"/>

            <TextView
                android:id="@+id/textViewprofilefragment"
                android:layout_width="97dp"
                android:layout_height="46dp"
                android:fontFamily="@font/segoe"
                android:text="Profile"
                android:layout_marginLeft="@dimen/_15sdp"
                android:layout_marginTop="@dimen/_10sdp"
                android:textColor="#000"
                android:textSize="@dimen/_18sdp"
                android:textStyle="bold" />

            <ImageButton
                android:id="@+id/imagebuttonsetting1"
                android:layout_width="@dimen/_25sdp"
                android:layout_height="@dimen/_25sdp"
                android:layout_marginLeft="@dimen/_250sdp"
                android:layout_marginTop="@dimen/_15sdp"
                android:background="@drawable/round" />

            <ImageButton
                android:id="@+id/imagebuttonsetting2"
                android:layout_width="@dimen/_25sdp"
                android:layout_height="@dimen/_25sdp"
                android:background="@drawable/cart"
                android:layout_toRightOf="@+id/imagebuttonsetting1"
                android:layout_marginTop="@dimen/_15sdp"/>

            <ImageView
                android:id="@+id/iv_separator1"
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:layout_below="@id/textViewprofilefragment"
                android:layout_marginHorizontal="32dp"
                android:src="#dedede" />

            <ImageView
                android:id="@+id/imageViewprofilefragment"
                android:layout_width="@dimen/_85sdp"
                android:layout_height="@dimen/_85sdp"
                android:layout_below="@id/iv_separator1"
                android:layout_marginTop="25dp"
                android:layout_marginLeft="@dimen/_120sdp"
                app:srcCompat="@drawable/avatar" />

            <TextView
                android:id="@+id/textViewprofilefragment2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_10sdp"
                android:fontFamily="@font/arial"
                android:gravity="center"
                android:text=""
                android:layout_below="@id/imageViewprofilefragment"
                android:textColor="#000"
                android:textSize="@dimen/_14sdp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/textViewprofilefragment3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/arial"
                android:gravity="center"
                android:text=""
                android:layout_below="@id/textViewprofilefragment2"
                android:textColor="#000"
                android:textSize="@dimen/_10sdp"
                android:textStyle="normal" />

            <ImageButton
                android:id="@+id/imagebuttonanalysis"
                android:layout_width="@dimen/_130sdp"
                android:layout_height="@dimen/_30sdp"
                android:layout_gravity="center"
                android:layout_marginLeft="@dimen/_100sdp"
                android:layout_below="@id/textViewprofilefragment3"
                android:layout_marginTop="@dimen/_10sdp"
                android:background="@drawable/analysis" />

            <ProgressBar
                android:id="@+id/progressBarBodyShapeScreen_1"
                style="?android:attr/progressBarStyleHorizontal"
                android:layout_width="@dimen/_327sdp"
                android:layout_height="@dimen/_10sdp"
                android:max="100"
                android:progress="30"
                android:progressTint="@color/progess"
                android:secondaryProgressTintMode="src_over"
                android:secondaryProgressTint="@color/progressblue"
                android:secondaryProgress="50"
                android:layout_below="@+id/imageViewBodyShapeScreen_1"
                android:layout_marginTop="@dimen/_15sdp"
                android:layout_marginStart="@dimen/_20sdp"
                android:layout_marginEnd="@dimen/_20sdp"
                android:background="@drawable/progressfinal"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="@dimen/_15sdp"
                android:layout_below="@id/progressBarBodyShapeScreen_1"
                android:layout_marginTop="@dimen/_5sdp"
                android:gravity="center"
                android:text="100% Completed" />



            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="@dimen/_300sdp"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal">


                    <TextView
                        android:id="@+id/textviewdetail1"
                        android:layout_width="@dimen/_92sdp"
                        android:layout_height="@dimen/_92sdp"
                        android:layout_marginLeft="10dp"
                        android:text=""
                        android:background="@drawable/shaperecblue"/>

                    <TextView
                        android:id="@+id/textviewdetail2"
                        android:layout_width="@dimen/_92sdp"
                        android:layout_height="@dimen/_92sdp"
                        android:layout_marginLeft="@dimen/_10sdp"
                        android:background="@drawable/shaperecdark"/>

                    <TextView
                        android:id="@+id/textviewdetail3"
                        android:layout_width="@dimen/_92sdp"
                        android:layout_height="@dimen/_92sdp"
                        android:layout_marginLeft="@dimen/_10sdp"
                        android:background="@drawable/shaperec"/>


                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginTop="@dimen/_20sdp"
                    android:orientation="horizontal">
                    <TextView
                        android:id="@+id/textviewdetail4"
                        android:layout_width="@dimen/_92sdp"
                        android:layout_height="@dimen/_92sdp"
                        android:layout_marginLeft="10dp"
                        android:background="@drawable/shaperec"/>

                    <TextView
                        android:id="@+id/textviewdetail5"
                        android:layout_width="@dimen/_92sdp"
                        android:layout_height="@dimen/_92sdp"
                        android:layout_marginLeft="@dimen/_10sdp"
                        android:background="@drawable/shaperecdark"/>

                    <TextView
                        android:id="@+id/textviewdetail6"
                        android:layout_width="@dimen/_92sdp"
                        android:layout_height="@dimen/_92sdp"
                        android:layout_marginLeft="@dimen/_10sdp"
                        android:background="@drawable/shaperecblue"/>

                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginTop="@dimen/_20sdp"
                    android:orientation="horizontal">
                    <TextView
                        android:id="@+id/textviewdetail7"
                        android:layout_width="@dimen/_92sdp"
                        android:layout_height="@dimen/_92sdp"
                        android:layout_marginLeft="10dp"
                        android:background="@drawable/shaperecblue"/>

                    <TextView
                        android:id="@+id/textviewdetail8"
                        android:layout_width="@dimen/_92sdp"
                        android:layout_height="@dimen/_92sdp"
                        android:layout_marginLeft="@dimen/_10sdp"
                        android:background="@drawable/shaperecdark"/>

                    <TextView
                        android:id="@+id/textviewdetail9"
                        android:layout_width="@dimen/_92sdp"
                        android:layout_height="@dimen/_92sdp"
                        android:layout_marginLeft="@dimen/_10sdp"
                        android:background="@drawable/shaperec"/>

                </LinearLayout>



            </LinearLayout>

        </RelativeLayout>

    </ScrollView>

</RelativeLayout>