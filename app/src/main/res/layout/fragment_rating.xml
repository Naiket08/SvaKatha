<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="#FFFFFF">


<ScrollView
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="#FFFFFF">


        <ImageView
            android:id="@+id/imageViewCapturedImage"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_290sdp"
            android:layout_marginStart="@dimen/_30sdp"
            android:layout_marginEnd="@dimen/_30sdp"
            android:layout_marginTop="@dimen/_10sdp"
            android:scaleType="centerInside" />

    <ImageButton
        android:id="@+id/imageButtonCameraButton"
        android:layout_width="@dimen/_40sdp"
        android:layout_height="@dimen/_40sdp"
        android:background="@drawable/backgroundcamerabutton"
        android:src="@drawable/ic_photo_camera_black_24dp"
        android:layout_below="@id/imageViewCapturedImage"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="@dimen/_20sdp"
        android:layout_marginTop="@dimen/_10sdp"/>

    <ImageView
        android:id="@+id/imageViewLikeDislike"
        android:layout_width="@dimen/_100sdp"
        android:layout_height="@dimen/_100sdp"
        android:background="@drawable/likedislikeborder"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="@dimen/_330sdp"
        android:src="@drawable/dislikeimage"
        android:scaleType="center"
        android:visibility="visible"/>

    <ImageView
        android:id="@+id/imageViewLike"
        android:layout_width="@dimen/_100sdp"
        android:layout_height="@dimen/_100sdp"
        android:background="@drawable/likeborder"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="@dimen/_330sdp"
        android:src="@drawable/likeimage"
        android:scaleType="center"
        android:visibility="invisible"/>

    <TextView
        android:id="@+id/textViewLikeDislikePercentage"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="0%"
        android:textColor="#000"
        android:textSize="@dimen/_14ssp"
        android:layout_below="@+id/imageViewLikeDislike"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="@dimen/_8sdp"/>

    <!--<EditText
        android:id="@+id/editTextPercentge"
        android:layout_width="@dimen/_120sdp"
        android:layout_height="@dimen/_30sdp"
        android:hint="Enter Percentage"
        android:textColor="#000"
        android:inputType="number"
        android:layout_below="@id/imageViewLikeDislike"
        android:layout_marginTop="@dimen/_38sdp"
        android:layout_alignParentStart="true"
        android:layout_marginStart="@dimen/_10sdp"/>

    <Button
        android:id="@+id/buttonChangeLikeDislike"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/buttonld"
        android:text="L/D"
        android:textColor="#000"
        android:textSize="@dimen/_14ssp"
        android:layout_below="@+id/editTextPercentge"
        android:layout_alignParentStart="true"
        android:layout_marginStart="@dimen/_30sdp"/>-->


    <androidx.appcompat.widget.AppCompatSpinner
        android:id="@+id/spnr_selectstyle"
        android:layout_width="146dp"
        android:layout_height="47dp"
        android:layout_marginHorizontal="16dp"
        android:paddingHorizontal="16dp"
        android:background="@drawable/spinner_bg_selectstyle"
        android:layout_below="@+id/imageViewLikeDislike"
        android:layout_marginTop="@dimen/_38sdp"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="@dimen/_10sdp"/>


        </RelativeLayout>
    </ScrollView>
</RelativeLayout>